{
  "version": 6,
  "configurePresets": [
    {
      "name": "ninja-debug",
      "displayName": "Ninja Debug (arm-none-eabi)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/arm-none-eabi-gcc.cmake"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build",
      "configurePreset": "ninja-debug",
      "configuration": "Debug"
    }
  ]
}

